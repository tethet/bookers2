<div class="container">
 <div class="row">
    <div class="col-md-3">
      <%= render 'books/book', user: @user, book: @book %>
    </div>


    <div class="col-md-8 offset-md-1">
        <h2 class="mt-3">Users</h2>
        <% @users.each do |user| %>
        
        <div>
          <h3>title</h3><!--自分と他人のshowリンクを設定する　-->
          <%= image_tag user.get_profile_image(100, 100) %> 
          
          <h3>Name</h3>
          <%= user.name %>
          
           <li>
              <%= link_to "Show", user_path(user) %>
           </li>
          
        </div>
    
        <% end %>
    </div>
 </div>
</div>