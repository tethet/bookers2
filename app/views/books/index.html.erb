<div class="container">
 <div class="row">
    <div class="col-md-3">
     <%= render 'book', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Books</h2>
       <table class="table">
        <th></th>
        <th>title</th>
        <th>Opinion</th>
        <% @books.each do |book| %>
        <tr>
         <td>
          <%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(100, 100) %> 
          <% end %>
         </td>
         
         <td>
         <%= link_to book.title, book_path(book.id) %>
         </td>
        
         <td>
          <%= book.body %>
         </td>
         
           
        </tr>
       
           
         <% end %>
       </table>
        
      
      
         
    </div>
  </div>
</div>