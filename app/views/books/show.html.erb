<div class="container">
 <div class="row">
    <div class="col-md-3">
     <%= render 'book', user: @users, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Book detail</h2>
      <table class="table">
          <div>
            <tr>
              <td>
                 <%= link_to user_path(@users.id) do %>
                  <%= image_tag @book_show.user.get_profile_image(100, 100) %> 
                 <br> <%= @users.name %>
                 <% end %>
        
              </td>
                  
               <td>
                 <%= link_to book_path(@book_show) do %>
                  <%= @book_show.title %>
                 <% end %>
               </td>
               <td>
                 <%= @book_show.body %>
               </td>
               
               
                 <% if @book_show.user == current_user %>
               <td>
                 <%= link_to "Edit", edit_book_path(@book_show) %>
               </td>
                 <% end %>
                 <!--destroyも作る-->
                 <% if @book_show.user == current_user %>
               <td>
                 <%= link_to "Destroy", book_path(@book_show), method: :delete, "data-confirm" =>"Are you sure?" %>
               </td>
                <% end %>
             
                   
                
               
            </tr>
            
      </div>
      </table>
      
    </div>
  </div>
</div>